<h1>Listing todos</h1>

<table>
  <tr>
    <th>Input</th>
    <th>Label</th>
    <th>Due at</th>
    <th>Done</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.input %></td>
    <td><%= todo.label %></td>
    <td><%= todo.due_at %></td>
    <td><%= todo.done %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Todo', new_todo_path %>
