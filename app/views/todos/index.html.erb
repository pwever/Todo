
<% if params[:notice] then %>
    <p><%= params[:notice] %></p>
<% end %>

<%= form_for Todo.new do |f| %>
    <%= f.label "New todo:" %>
    <%= f.text_field :label, :placeholder => "Enter new todo here" %>
    <%= f.submit "Add" %>
<% end %>

<ul id="todos">
<%= form_tag( {:action => :markdone} ) do %>
	<% @todos.each do |@todo| %>
<%= render "line" %>
	<% end %>
	<%= submit_tag "Mark done" %>
<% end %>
</ul>